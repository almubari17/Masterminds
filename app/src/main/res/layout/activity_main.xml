                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView40"
                            android:src="@mipmap/red_pin" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView41"
                            android:src="@mipmap/white_pin" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1" >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView42"
                            android:src="@mipmap/empty_circle" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView43"
                            android:src="@mipmap/empty_circle" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:id="@+id/firstCircles"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blackButton"
                    android:clickable="false"
                    android:src="@mipmap/black1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="#ff2b4f81"
                    android:visibility="visible" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/blueButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/blue_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:backgroundTintMode="src_over" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/brownButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/brown_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/greenButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/green_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lightBlueButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/light_blue"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/secondCircles">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orangeButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/orange_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/purpleButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/purple_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/redButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/reball"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yellowButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/yellow_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pinkButton"
                    android:background="#ff2b4f81"
                    android:src="@mipmap/pink_circle"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/buttonsLayout">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Game"
                    android:id="@+id/newGameButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quit"
                    android:id="@+id/quitButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:id="@+id/resetButton" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkButton"
                    android:text="Check" />

                <Spinner
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/diffSpin"

                    android:background="#ffbfbfba" />

                <Spinner
                    android:layout_width="166dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/themeSpin"
                    android:background="#ffbfbfba" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume:"
                    android:id="@+id/volumeText"
                    android:layout_weight="0.1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/changVol"
                    android:layout_weight="0.1" />

                <SeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/volumeControl"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
